{% block component_rating_stars %}
	{% block component_rating_stars_calculation %}
		{% set full = points|round(0, 'floor')   %}
		{% set left = points - full  %}
		{% if left > 0.5 %}
			{% set half = 1 %}
		{% endif %}

		{% set fill = 5 - full - half  %}

		{% if full > 0 %}
			{% for star in range(1,full) %}
				<i class="fas fa-star"></i>
			{% endfor %}
		{% endif %}

		{% if half %}
			<i class="fas fa-star-half-alt"></i>
		{% endif %}

		{% if fill > 0 %}
			{% for star in range(1,fill) %}
				<i class="far fa-star"></i>
			{% endfor %}
		{% endif %}

	{% endblock %}

{% endblock %}
