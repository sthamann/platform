{% block page_product_detail_rating_form_container %}
    {% if ratingSuccess is same as(1) %}
        Abgeschickt & Erfolgreich
    {% elseif ratingSuccess is same as(-1)  %}
        Abgeschickt & Fehler
    {% else %}
        Nicht abgeschickt
    {% endif %}
    <div class="collapse multi-collapse" id="rating-form">
        {% block page_product_detail_rating_description %}

        {% endblock %}
        {% block page_product_detail_rating_alert %}
            {% if ratingActionError %}
                <div class="alert alert-danger">
                    {{ "account.loginBadCredentials"|trans }}
                </div>
            {% endif %}
        {% endblock %}

        {% block page_product_detail_rating_form %}
            <form class=""
                  action="{{ path('frontend.detail.rating.save', { productId: page.product.id }) }}"
                  method="post">
                {% block page_product_detail_rating_form_details %}
                    <div class="form-row">
                        {% block page_product_detail_rating_form_name %}
                            <div class="form-group col-md-6">
                                <label for="name">Name</label>
                                <input type="text"
                                       class="form-control {% if formViolations.getViolations('/name') %}is-invalid{% endif %}"
                                       id="name"
                                       placeholder="Name"
                                       name="name"
                                       required="required"
                                       value="Swaggy S.">
                                {% if formViolations.getViolations('/name') %}
                                    <div class="invalid-feedback">
                                        {% for error in formViolations.getViolations('/name') %}
                                            {{ error.message }}
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>
                        {% endblock %}

                        {% block page_product_detail_rating_form_points %}
                            <div class="form-group col-md-6">
                                <label for="points">Rating</label>
                                <select class="form-control {% if formViolations.getViolations('/points') %}is-invalid{% endif %}"
                                        type="text"
                                        id="points"
                                        placeholder="Punkte"
                                        name="points"
                                        required="required">
                                    <option selected value="-1">Bitte ausw√§hlen</option>
                                    <option {%  if data.get('points') == 1 %}selected{% endif %} value="1">1</option>
                                    <option {%  if data.get('points') == 2 %}selected{% endif %} value="2">2</option>
                                    <option {%  if data.get('points') == 3 %}selected{% endif %} value="3">3</option>
                                    <option {%  if data.get('points') == 4 %}selected{% endif %} value="4">4</option>
                                    <option {%  if data.get('points') == 5 %}selected{% endif %} value="5">5</option>
                                </select>
                                {% if formViolations.getViolations('/points') %}
                                    <div class="invalid-feedback">
                                        {% for error in formViolations.getViolations('/points') %}
                                            {{ error.message }}
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>
                        {% endblock %}

                    </div>
                {% endblock %}

                {% block page_product_detail_rating_form_summary %}
                    <div class="form-group">
                        <label for="title">Summary</label>
                        <input type="text"
                               class="form-control {% if formViolations.getViolations('/title') %}is-invalid{% endif %}"
                               id="title"
                               placeholder="Summary"
                               name="title"
                               required="required">
                        {% if formViolations.getViolations('/title') %}
                            <div class="invalid-feedback">
                                {% for error in formViolations.getViolations('/title') %}
                                    {{ error.message }}
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                {% endblock %}

                {% block page_product_detail_rating_form_content %}
                    <input type="hidden" id="email" name="email" value="mail@domain.tld">
                    <div class="form-group">
                        <label for="content">Your Review</label>
                        <textarea
                                class="form-control {% if formViolations.getViolations('/content') %}is-invalid{% endif %}"
                                id="content"
                                name="content"
                                required="required"
                                rows="5">
                        </textarea>
                        {% if formViolations.getViolations('/content') %}
                            <div class="invalid-feedback">
                                {% for error in formViolations.getViolations('/content') %}
                                    {{ error.message }}
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                {% endblock %}

                {% block page_product_detail_rating_form_submit %}
                    <button type="submit" class="btn btn-primary">
                        Submit
                    </button>
                {% endblock %}

                {% block page_product_detail_rating_form_cancel %}
                    <a href="#" class="btn btn-link" data-toggle="collapse" data-target=".multi-collapse" aria-expanded="false" aria-controls="rating-form rating-list">
                        Cancel
                    </a>
                {% endblock %}

            </form>
        {% endblock %}

    </div>
{% endblock %}
