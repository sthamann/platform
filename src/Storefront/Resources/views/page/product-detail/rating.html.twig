
{% block page_product_detail_rating_container %}
    <div class="product-detail-rating tab-pane-container">
        {% block page_product_detail_rating_title %}
            <h3 class="product-detail-rating-title">
                2.222 ratings for {{ page.product.name|e }}
            </h3>
        {% endblock %}

        {% block page_product_detail_rating_content %}
            <div class="row">
                <div class="col-3">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star-half-alt"></i>
                    4.5 out of 5 Stars 
                    <hr>
                    <div class="collapse show">
                        <h4>Leave a review</h4>
                        <p>Share your thoughts with other customers</p>
                        <button class="btn btn-primary" type="button" data-toggle="collapse" data-target=".multi-collapse" aria-expanded="false" aria-controls="rating-form rating-list">
                            Write a review
                        </button>
                        <hr>
                    </div>
                </div>
                <div class="col">
                    {% block page_product_detail_rating_content_form %}
                        {% sw_include '@Storefront/page/product-detail/rating-form.html.twig' %}
                    {% endblock %}

                    {% block page_product_detail_rating_content_list %}
                        <div id="rating-list" class="collapse multi-collapse show" itemprop="rating-list">
                            {% for rating in page.product.ratings %}
                                <h4><i class="fas fa-user-circle"></i> Josua S. on {{ rating.createdAt|date }} {% if rating.language|e %}({{ rating.language|e }}){% endif %} <span class="badge badge-primary">Verified</span></h4>
                                <p> <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="far fa-star"></i> <strong>{{ rating.title|e }}</strong></p>
                                <p>{{ rating.content|e }}</p>
                                {% if rating.comment|e %}
                                    <blockquote class="blockquote">
                                        <footer class="blockquote-footer">Our Feedback: {{ rating.comment|e }}</footer>
                                    </blockquote>
                                {% endif %}
                            {% endfor %}
                        </div>
                    {% endblock %}

                </div>
            </div>

        {% endblock %}

    </div>
{% endblock %}