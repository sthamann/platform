{% block sw_rating_detail %}
    <sw-page class="sw-rating-detail">

        {% block sw_rating_detail_header %}
            <template slot="smart-bar-header">
                <h2>{{ placeholder(rating, 'name', $tc('sw-rating.detail.textHeadline')) }}</h2>
            </template>
        {% endblock %}

        {% block sw_rating_detail_actions %}
            <template slot="smart-bar-actions">

                {% block sw_rating_detail_actions_abort %}
                    <sw-button :disabled="rating.isLoading" :routerLink="{ name: 'sw.rating.index' }">
                        {{ $tc('sw-rating.detail.buttonCancel') }}
                    </sw-button>
                {% endblock %}

                {% block sw_rating_detail_actions_save %}
                    <sw-button class="sw-rating-detail__save-action" variant="primary" :disabled="rating.isLoading"
                            @click.prevent="onSave">
                        {{ $tc('sw-rating.detail.buttonSave') }}
                    </sw-button>
                {% endblock %}

            </template>
        {% endblock %}

        {% block sw_rating_detail_language_switch %}
            <sw-language-switch slot="language-switch"
                @on-change="onChangeLanguage"
                :saveChangesFunction="saveOnLanguageChange"
                :abortChangeFunction="abortOnLanguageChange">
            </sw-language-switch>
        {% endblock %}

        {% block sw_rating_detail_content %}
            <sw-card-view slot="content">

            {% block sw_rating_detail_content_language_info %}
                <sw-language-info
                    :entityDescription="placeholder(rating, 'name', $tc('sw-rating.detail.textHeadline'))">
                </sw-language-info>
            {% endblock %}

            {% block sw_rating_detail_base_basic_info_card %}
                <sw-card :title="$tc('sw-rating.detail.cardTitleRatingInfo')" :isLoading="rating.isLoading">
                    <sw-container columns="repeat(auto-fit, minmax(250px, 1fr)" gap="0 30px" class="sw-rating-detail__container">
                        <div class="sw-rating-detail__base-info-wrapper">

                            {% block sw_rating_detail_base_info_field_name %}
                                <sw-field type="text"
                                    :label="$tc('sw-rating.detail.labelName')"
                                    :placeholder="placeholder(rating, 'name', $tc('sw-rating.detail.placeholderName'))"
                                    name="name"
                                    validation="required"
                                    v-model="rating.name">
                                </sw-field>
                            {% endblock %}

                            {% block sw_rating_detail_base_info_field_link %}
                            <sw-field type="text"
                                :label="$tc('sw-rating.detail.labelLink')"
                                :placeholder="$tc('sw-rating.detail.placeholderLink')"
                                name="link"
                                v-model="rating.link">
                            </sw-field>
                            {% endblock %}
                        </div>

                        {% block sw_rating_detail_logo_upload %}
                            <sw-upload-store-listener
                                :uploadTag="mediaUploadTag"
                                autoUpload
                                @sw-media-upload-finished="setMediaItem">
                            </sw-upload-store-listener>
                            <sw-media-upload
                                :source="mediaItem"
                                class="sw-rating-detail__logo-upload"
                                :allowMultiSelect="false"
                                variant="regular"
                                :uploadTag="mediaUploadTag"
                                :label="$tc('sw-rating.detail.labelLogo')"
                                :defaultFolder="ratingStore.getEntityName()"
                                @sw-media-upload-media-upload-success="setMediaItem"
                                @sw-media-upload-remove-image="onUnlinkLogo">
                            </sw-media-upload>
                        {% endblock %}
                    </sw-container>

                    {% block sw_rating_detail_base_info_field_description %}
                        <sw-text-editor
                            :label="$tc('sw-rating.detail.labelDescription')"
                            :placeholder="placeholder(rating, 'name', $tc('sw-rating.detail.placeholderDescription'))"
                            name="description"
                            v-model="rating.description">
                        </sw-text-editor>
                    {% endblock %}
                </sw-card>
            {% endblock %}

            {% block sw_rating_detail_attribute_sets %}
                <sw-card :title="$tc('sw-settings-attribute.general.mainMenuItemGeneral')"
                         v-if="next754 && attributeSets.length > 0"
                         :isLoading="rating.isLoading">
                    <sw-attribute-set-renderer
                            :entity="rating"
                            :sets="attributeSets">
                    </sw-attribute-set-renderer>
                </sw-card>
            {% endblock %}
        </sw-card-view>
    {% endblock %}

    {% block sw_rating_detail_sidebar %}
        <template slot="sidebar">
            <sw-sidebar :propagateWidth="true">
                <sw-sidebar-media-item ref="mediaSidebarItem">
                    <template slot="context-menu-items" slot-scope="media">
                        <sw-context-menu-item @click="setMediaFromSidebar(media.mediaItem)">
                            {{ $tc('sw-rating.detail.labelUseAsLogo') }}
                        </sw-context-menu-item>
                    </template>
                </sw-sidebar-media-item>
            </sw-sidebar>
        </template>
     {% endblock %}

    </sw-page>
{% endblock %}
